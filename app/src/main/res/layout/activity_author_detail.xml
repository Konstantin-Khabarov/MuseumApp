<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/textDetailName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Имя"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp" />

    <TextView
        android:id="@+id/textDetailBio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Биография"
        android:textSize="16sp"
        android:layout_marginBottom="16dp" />

    <TextView
        android:id="@+id/textDetailBirthDeath"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Даты жизни"
        android:textSize="14sp"
        android:layout_marginBottom="32dp" />

    <!-- Кнопки в одной строке -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal">

        <ImageButton
            android:id="@+id/btnEdit"
            android:layout_width="68dp"
            android:layout_height="68dp"
            android:src="@drawable/edit"
            android:background="@drawable/button_background_edit"
            android:layout_marginEnd="32dp" />

        <ImageButton
            android:id="@+id/btnDelete"
            android:layout_width="68dp"
            android:layout_height="68dp"
            android:src="@drawable/delete"
            android:background="@drawable/button_background_delete"
            android:layout_marginStart="8dp" />

    </LinearLayout>

</LinearLayout>